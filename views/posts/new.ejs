<% layout('layouts/boilerplate') -%>

<div class="container">
	<div class="row justify-content-center">
		<div class="col-12 col-md-5">
		<h5>Post a fashion style!</h5>
 <form action="/posts" method="POST" enctype="multipart/form-data">
	<div class="form-group mb-0">
		<label for="title">Title</label>
		<input type="text" class="form-control" name="post[title]" id="title" required  >
	</div>
	<div class="form-group mb-0">
			<label for="price">Price</label>
			<input type="text" class="form-control" placeholder="optional" id="price" name="post[price]" >
	</div>
	<div class="form-group mb-0">
			<label > Image </label>
			<input type="file" class="form-control-file" accept="images/*" name="images" multiple  required/> 
	</div>
	<div class="mb-3 ">
			<label for="Description">Description</label>
			<textarea class="form-control" name="post[description]" id="Description" required></textarea>
		<button type="submit" class="btn btn-primary mt-3">Submit</button>
 </form>
</div>
</div>
</div>