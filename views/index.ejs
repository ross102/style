<% layout('layouts/boilerplate') -%>
<section  class="container mb-5 px-0">
 <div id="foodHeader" class="jumbotron p-0 text-center">
    <h3 class="mb-5 pb-5"></h3>
     <form class="form-inline mx-2 my-2 my-lg-0  justify-content-center " action="/recipe">
      <input class="form-control mx-2 mr-sm-2" type="search" placeholder="search food " name="foodSearch">
      <button class="btn btn-outline-primary  my-2 my-sm-0" type="submit">Search</button>
    </form>
    <b><p class="display-5"> E.g cakes, doughnuts, burger, pasta,pizza... </p></b>
  </div>
</section>

<section class="container ">
    <div id="fashionHeader" class="jumbotron text-light pb-3 pb-md-0">
       <h3 class="display-6 text-center"> Fashion trends</h3>
       <p class="lead mb-0"> Follow the fashion trends from different cultures around the world </p>
       <p class="mb-3"> Upload the fashion designs you love </p>
       <a class="btn btn-outline-light mb-2 pb-2" href="/posts" role="button">View trends</a>
       <a class="btn btn-outline-light mb-2  pb-2" href="/register" role="button">Sign up</a>
    </div>
   </section>
   
   <section id="sliderBody" class="container">
    <div id="styleSlider" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="https://images.pexels.com/photos/1432238/pexels-photo-1432238.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" class="d-block w-100 slidimg" alt="fashion">
            <div class="carousel-caption  d-md-block">
                <h5>White traditonal make-up </h5>
                <p>...</p>
              </div>
          </div>
          <div class="carousel-item">
            <img src="https://images.pexels.com/photos/461295/pexels-photo-461295.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" class="d-block w-100 slidimg" alt="food">
            <div class="carousel-caption  d-md-block">
                <h5 class="text-dark">white icing-cake</h5>
                <p class="text-dark"> Different cake recipes </p>
              </div>
          </div>
          <div class="carousel-item">
            <img src="https://images.pexels.com/photos/376464/pexels-photo-376464.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" class="d-block w-100 slidimg" alt="food">
            <div class="carousel-caption d-md-block">
                <h5>pancake with sliced strawberry</h5>
            </div>
          </div>
        </div>
        <a class="carousel-control-prev" href="#styleSlider" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#styleSlider" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>      
   </section>
